{{template "base" .}}

{{define "title"}}Домашняя страницы{{end}}

{{define "main"}}
	<h2>Последние заметки</h2>
	{{if .Snippets}}
	<table>
		<tr>
			<th>Заголовок</th>
			<th>Создан</th>
			<th>ID</th>
		</tr>
		{{range .Snippets}}
		<tr>
			<td><a href="/snippet?id={{.ID}}">{{.Title}}</a></td>
			<td>{{.Created | formatDate}}</td>
			<td>#{{.ID}}</td>
		</tr>
		{{end}}
	</table>
	{{else}}
		<p>Здесь ничего нет... пока что!</p>
	{{end}}
{{end}}